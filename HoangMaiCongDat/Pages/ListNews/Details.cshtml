@page
@model HoangMaiCongDat.Pages.ListNews.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>News</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.News.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.News.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.News.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.News.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.News.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.News.ImageUrl)" alt="" height="100">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.News.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.News.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.News.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.News.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.News.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.News.Category.Name)
        </dd>
		<br /><br />
		<table class="table">
			<thead>
                
            <tr>
                <th>
					List of comments
                </th>
                <th><a asp-page="/Comments/Create" asp-route-postId="@Model.News.Id">Add new comment</a></th>
            </tr>
            </thead>
			<tbody>
		@foreach (var item in @Model.News.ListComments) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <a asp-page="/Comments/Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="/Comments/Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="/Comments/Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
        </table>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.News.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
